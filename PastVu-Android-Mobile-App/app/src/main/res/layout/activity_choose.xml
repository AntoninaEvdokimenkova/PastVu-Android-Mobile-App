<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.ltst.pastvuandroidmobileapp.ChooseActivity">


    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/viewFlipperForOldPictureOnMainMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_settings_on_main_menu">

    </ViewFlipper>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_preferences"
        android:id="@+id/btn_settings_on_main_menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/try_button_shape"
        android:textColor="@drawable/try_button_color_selector"
        android:id="@+id/btn_to_map"
        android:text="@string/to_map"
        android:layout_alignBottom="@+id/btn_settings_on_main_menu"
        android:layout_toRightOf="@+id/btn_settings_on_main_menu"
        android:layout_toEndOf="@+id/btn_settings_on_main_menu"
        android:layout_toLeftOf="@+id/btn_to_favourite"
        android:layout_toStartOf="@+id/btn_to_favourite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_star_big_off"
        android:id="@+id/btn_to_favourite"
        android:layout_alignBottom="@+id/btn_to_map"
        android:layout_alignRight="@+id/viewFlipperForOldPictureOnMainMenu"
        android:layout_alignEnd="@+id/viewFlipperForOldPictureOnMainMenu" />
</RelativeLayout>
