<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.ltst.pastvuandroidmobileapp.ChooseActivity">


    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewFlipperForOldPictureOnMainMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_to_map"
        android:clickable="true"
        android:onClick="onClickPictures"
        android:layout_margin="@dimen/standart_margin">

    </ViewFlipper>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_preferences"
        android:id="@+id/btn_settings_on_main_menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/standart_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_to_map"
        android:text="@string/to_map"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_to_favourite"
        android:layout_toStartOf="@+id/btn_to_favourite"
        android:layout_toRightOf="@+id/btn_settings_on_main_menu"
        android:layout_toEndOf="@+id/btn_settings_on_main_menu"
        android:layout_margin="@dimen/standart_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_star_big_off"
        android:id="@+id/btn_to_favourite"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/standart_margin"
        android:layout_marginTop="@dimen/standart_margin"
        android:layout_marginBottom="@dimen/standart_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
